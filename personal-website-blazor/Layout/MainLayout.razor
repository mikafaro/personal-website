@inherits LayoutComponentBase

<div class="max-w-6xl mx-auto">

    <header class="fixed flex z-50 items-center justify-center
                    max-w-6xl mx-auto h-20 top-0 inset-x-0 px-6
                    drop-shadow-xl  border-x-1 border-b-1 rounded-b-lg
                    bg-arctic-glacier border-arctic-glacier 
                    dark:bg-darkarctic-midnight dark:border-darkarctic-midnight
                    drop-shadow-arcticgray-light dark:drop-shadow-darkarcticgray-deep/50">

        <NavMenu />
        
    </header>

    <div class="mt-26">
        @Body
    </div>

    <footer class="fixed flex z-50 items-center justify-between
                    bottom-0 inset-x-0 h-12 max-w-6xl mx-auto
                    rounded-t-lg border-x-2 border-t-2 drop-shadow-lg
                    border-arctic-glacier bg-arctic-glacier
                    dark:bg-darkarctic-midnight dark:border-darkarctic-midnight
                    drop-shadow-arcticgray-dark dark:drop-shadow-darkarcticgray-deep/50">
        <ThemeToggle />
        <Socials />
    </footer>

</div>