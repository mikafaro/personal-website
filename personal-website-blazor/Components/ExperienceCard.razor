@using PersonalWebsiteBlazor.Models

<article class="flex flex-col md:flex-row rounded-lg md:h-75 lg:h-60 shadow-lg
                mx-2 md:mx-4 my-4 cursor-default hover:scale-102
                transition-all duration-300 ease-out 
                bg-arctic-snow dark:bg-darkarctic-midnight
                border-arcticblue-default dark:border-darkarcticblue-default
                shadow-arcticgray-light hover:shadow-arcticaurora-deep/50
                dark:shadow-darkarcticgray-deep/50 dark:hover:shadow-darkarcticaurora-deep/50">

    <div class="h-50 w-full md:w-auto md:h-full flex lg:aspect-square">
        <img src=@Experience.Image class="object-cover w-full h-full rounded-t-lg md:rounded-tr-none md:rounded-l-lg" />
    </div>

    <section class="flex flex-col h-full w-full px-1 m-1 md:ml-4">

        <div class="flex flex-row items-center justify-between">
            <div class="flex flex-wrap space-x-1 p-1">
                @foreach (var affiliation in Experience.Affiliations)
                {
                    <Pill PillText=@affiliation Style="secondary" />
                }
            </div>
            <div class="flex p-1">
                <Pill Pilltext=@Experience.Type.ToDisplayString() Style="secondary" />
            </div>
        </div>

        <div class="mx-1 mt-1 px-1 flex flex-col flex-grow">
            <div class="flex flex-row justify-between space-x-2">
                <h3 class="font-extrabold text-xl text-balance
                           text-arcticblue-deep dark:text-darkarcticblue-default">
                    @Experience.ExperienceTitle
                </h3>
                <time class="text-sm italic text-end text-balance">
                    @Experience.FromDate.ToString("MMM yyyy")
                    -
                    @(Experience.ToDate.HasValue ? Experience.ToDate.Value.ToString("MMM yyyy") : "Present")
                </time>
            </div>
            <ul class="my-3 md:mb-0 text-balance space-y-2 leading-relaxed">
                @Experience.Description
            </ul>
        </div>

        <footer class="flex items-center justify-between mt-auto py-1">
            <div class="flex flex-wrap space-x-1 m-1 p-1">
                @foreach (var item in Experience.Keywords)
                {
                    <Pill PillText=@item Style="primary" />
                }
            </div>
            @if (Experience.LinkURL != null)
            {
                <a href=@Experience.LinkURL target="_blank" rel="noopener noreferrer"
                   class="flex items-center justify-center cursor-pointer my-1 rounded-lg
                          h-9 w-9 hover:bg-arcticaurora-deep/50 text-arcticblue-deep
                          hover:shadow-md shadow-arcticgray-dark/50 flex-shrink-0
                          dark:text-arcticblue-light dark:hover:bg-darkarcticaurora-deep/50
                          dark:shadow-darkarcticgray-light/50">
                    <Icon Name="Link" CssClass="h-7 w-7" />
                </a>
            }
        </footer>

    </section>

</article>

@code {
    [Parameter]
    public required Experience Experience { get; set; }
}